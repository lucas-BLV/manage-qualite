pipeline {
  agent {
    docker {
      image 'node:18'
      args '-u root'
    }
  }
  environment {
    SONAR_TOKEN = credentials('sonar')
  }
  stages {
    stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Build Next.js') {
      steps {
        sh 'npm run build'
      }
    }

    stage('SonarQube Scan') {
      environment {
        SONAR_HOST_URL = 'http://sonarqube:9000'
      }
      steps {
        withSonarQubeEnv('MySonarQube') {
          sh 'npx sonar-scanner'
        }
      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: '**/coverage/**, .next/**', allowEmptyArchive: true
    }
  }
}
